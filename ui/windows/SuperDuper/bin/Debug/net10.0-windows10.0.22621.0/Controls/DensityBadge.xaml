<UserControl
    x:Class="SuperDuper.Controls.DensityBadge"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--
        DensityBadge: shows a small colored pill with duplicate count.
        Background color derives from DensityLevel (Low/Medium/High).
        AutomationProperties.Name is set from code-behind to include verbal level.
    -->
    <Border x:Name="BadgeBorder"
            CornerRadius="4"
            Padding="5,2"
            MinWidth="28">
        <TextBlock x:Name="BadgeText"
                   HorizontalAlignment="Center"
                   FontSize="10"
                   FontWeight="SemiBold" />
    </Border>
</UserControl>
