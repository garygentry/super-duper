<UserControl
    x:Class="SuperDuper.Controls.ScanProgressOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
          Padding="32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="24" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Phase label -->
        <TextBlock Grid.Row="0"
                   x:Name="PhaseLabel"
                   Text="{x:Bind ScanPhaseLabel, Mode=OneWay}"
                   Style="{ThemeResource SubtitleTextBlockStyle}"
                   TextWrapping="Wrap" />

        <!-- Progress bar -->
        <ProgressBar Grid.Row="2"
                     x:Name="ProgressBar"
                     IsIndeterminate="{x:Bind ScanProgressIndeterminate, Mode=OneWay}"
                     Maximum="{x:Bind ScanProgressMax, Mode=OneWay}"
                     Value="{x:Bind ScanProgressValue, Mode=OneWay}"
                     AutomationProperties.Name="Scan progress" />

        <!-- Count + speed stats row -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       x:Name="CountLabel"
                       Text="{x:Bind ScanCountLabel, Mode=OneWay}"
                       Style="{ThemeResource CaptionTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            <TextBlock Grid.Column="1"
                       x:Name="SpeedLabel"
                       Text="{x:Bind SpeedLabel, Mode=OneWay}"
                       Style="{ThemeResource CaptionTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </Grid>

        <!-- Current file path (middle-truncated via custom control) -->
        <TextBlock Grid.Row="6"
                   x:Name="CurrentFileLabel"
                   Text="{x:Bind CurrentFilePath, Mode=OneWay}"
                   Style="{ThemeResource CaptionTextBlockStyle}"
                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                   TextTrimming="CharacterEllipsis"
                   TextWrapping="NoWrap"
                   FontFamily="Consolas"
                   AutomationProperties.Name="Current file being scanned" />

        <!-- Action buttons -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" Spacing="8">
            <Button x:Name="PauseButton"
                    Content="Pause"
                    IsEnabled="False"
                    AutomationProperties.Name="Pause scan" />
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Click="CancelButton_Click"
                    AutomationProperties.Name="Cancel scan" />
        </StackPanel>
    </Grid>
</UserControl>
