<!-- DuplicateGroupsPage: Virtual list of duplicate groups sorted by wasted bytes -->
<Page
    x:Class="SuperDuper.Views.DuplicateGroupsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:SuperDuper.ViewModels">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
            <TextBlock Text="Duplicate Groups" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}">
                <Run Text="{x:Bind ViewModel.TotalGroups, Mode=OneWay}" />
                <Run Text=" groups found" />
            </TextBlock>
        </StackPanel>

        <!-- Empty state -->
        <TextBlock Grid.Row="1"
                   Text="Run a scan from the Dashboard to find duplicate files."
                   Visibility="{x:Bind ViewModel.HasNoGroups, Mode=OneWay}"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                   HorizontalAlignment="Center"
                   Margin="0,32,0,0" />

        <!-- List of groups (with expand to show files) -->
        <ListView Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.Groups}"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:DuplicateGroupViewModel">
                    <Expander HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}">
                        <Expander.Header>
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{x:Bind FileCountLabel}"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1"
                                           Text="{x:Bind FileSizeLabel}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Column="2"
                                           Text="{x:Bind WastedBytesLabel}"
                                           Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </Expander.Header>

                        <Expander.Content>
                            <ItemsRepeater ItemsSource="{x:Bind Files}">
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="vm:FileViewModel">
                                        <Grid Padding="8,4" ColumnSpacing="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <CheckBox Grid.Column="0"
                                                      IsChecked="{x:Bind IsMarkedForDeletion, Mode=TwoWay}" />
                                            <TextBlock Grid.Column="1"
                                                       Text="{x:Bind File.CanonicalPath}"
                                                       TextWrapping="Wrap"
                                                       VerticalAlignment="Center" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </Expander.Content>
                    </Expander>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Pagination footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12"
                    Margin="0,12,0,0"
                    Visibility="{x:Bind ViewModel.HasMoreGroups, Mode=OneWay}">
            <Button Content="Load More"
                    Command="{x:Bind ViewModel.LoadNextPageCommand}" />
            <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                          Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                          Width="20" Height="20" />
        </StackPanel>
    </Grid>
</Page>
