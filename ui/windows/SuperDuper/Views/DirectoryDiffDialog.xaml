<ContentDialog
    x:Class="SuperDuper.Views.DirectoryDiffDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Review Differences"
    CloseButtonText="Close"
    MinWidth="720">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />  <!-- summary bar -->
            <RowDefinition Height="12" />
            <RowDefinition Height="400" />   <!-- side-by-side trees -->
        </Grid.RowDefinitions>

        <!-- Summary bar -->
        <Border Grid.Row="0"
                Background="{ThemeResource InfoBarInformationalSeverityBackgroundBrush}"
                CornerRadius="6" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="SummaryText"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold" />
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16"
                            VerticalAlignment="Center">
                    <!-- Legend -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Border Width="12" Height="12" CornerRadius="2"
                                Background="{ThemeResource KeepBgBrush}" />
                        <TextBlock Text="In both" FontSize="11" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Border Width="12" Height="12" CornerRadius="2"
                                Background="{ThemeResource InfoBrush}" />
                        <TextBlock Text="Left only" FontSize="11" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Border Width="12" Height="12" CornerRadius="2"
                                Background="{ThemeResource WarningBrush}" />
                        <TextBlock Text="Right only" FontSize="11" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Side-by-side tree view -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left directory tree -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock x:Name="LeftHeader"
                           Grid.Row="0"
                           FontWeight="SemiBold"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,6" />
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsRepeater x:Name="LeftRepeater">
                        <ItemsRepeater.Layout>
                            <StackLayout Spacing="2" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <Border CornerRadius="4" Padding="8,4"
                                        Background="{Binding Tag, RelativeSource={RelativeSource Self}}"
                                        x:Name="LeftItemBorder">
                                    <TextBlock Text="{x:Bind}"
                                               FontSize="12"
                                               FontFamily="Consolas"
                                               TextTrimming="CharacterEllipsis" />
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>
            </Grid>

            <!-- Divider -->
            <Border Grid.Column="1"
                    Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

            <!-- Right directory tree -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock x:Name="RightHeader"
                           Grid.Row="0"
                           FontWeight="SemiBold"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,6" />
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsRepeater x:Name="RightRepeater">
                        <ItemsRepeater.Layout>
                            <StackLayout Spacing="2" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <Border CornerRadius="4" Padding="8,4">
                                    <TextBlock Text="{x:Bind}"
                                               FontSize="12"
                                               FontFamily="Consolas"
                                               TextTrimming="CharacterEllipsis" />
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</ContentDialog>
